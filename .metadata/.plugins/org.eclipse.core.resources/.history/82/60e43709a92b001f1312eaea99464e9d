//(A+8B+7C-27)/4
//A=25,B=19,C=99


.syntax unified
.cpu cortex-m0
.thumb
.section .text
.global __main

__main:
	mov r0,#25


next:
	adds r0,r0,#1
	subs r3,r3,#1

	//branch to begin if result is not equal to zero
	bne begin

stop:
    b stop             // Infinite loop to stop the program
    .align
    .end
